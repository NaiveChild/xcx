/**index.wxss**/
.banner {
  width: 100%;
  height: 500rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.loaction {
  width: 100%;
  margin-top: 20rpx;
}

.dl {
  display: inline-block;
}

.weather {
  width: 96%;
  margin: 20rpx;
  padding: 40rpx 20rpx;
  background: #eee;
  box-sizing: border-box;
}

.city {
  border-bottom: 1px solid #41c500;
}

.temp {
  margin-top: 20rpx;
  line-height: 100rpx;
  font-size: 60rpx;
  color: #41c500;
  text-align: center;
}

.info {
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.life {
  margin: 40rpx 0;
  text-indent: 1em;
}