.mapTab {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
  color: #ac843e;
}

.mapSelected {
  color: #a86705;
  border: 1px solid #a86705;
  border-radius: 3px;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 20rpx 0;
}

.map-container {
  height: 700rpx;
  padding: 20rpx;
  margin: 10rpx;
}

.map {
  width: 100%;
  height: 100%;
}

.info {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #ac843e;
}