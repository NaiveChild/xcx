.bg {
  width: 750rpx;
  height: 700rpx;
}

.wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 36rpx;
}

.curWeather {
  height: 650rpx;
  color: #9d732b;
}

.curTemperature {
  height: 84%;
  text-align: right;
}

.temp {
  font-size: 80rpx;
}

.city , .type{
  font-size: 28rpx;
}

.curExtern {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.line {
  border: 1px solid #9d732b;
}

.forecast {
  margin-top: 40rpx;
  /* font-size: 36rpx; */
  color: #f4c91a;
}

.castItem {
  display: flex;
  justify-content: space-around;
  padding:50rpx 10rpx;
  border-bottom: 1px solid #ccc;
}